<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">


<mapper namespace="user">
	<!-- 쿼리문작성 -->

	<!-- 회원가입 -->
	<insert id="insert" parameterType="com.javaex.vo.UserVo">
		<![CDATA[
			insert into user (`userNum`, `userEmail`, `userPw`, `userName`) 
			values(null, #{userEmail}, #{userPw}, #{userName})
		]]>
	</insert>
	
	
	<!-- 아이디 중복체크 api -->						<!-- count의 결과는 int -->
	<select id="selectById" parameterType="String" resultType="int">
		<![CDATA[
			select count(*)
			from users
			where id = #{id}
		]]>
	</select>


	<!-- 로그인 -->
	<select id="selectByIdPw" parameterType="com.javaex.vo.UserVo" resultType="com.javaex.vo.UserVo">
		<![CDATA[
			select no
	 			 , name
			from users
			where id = #{id}
			and password = #{password}
		]]>
	</select>
	
	
	<!-- 수정폼  no로 한명데이터 가져오기(회원정보수정 폼) -->
	<select id="selectOneByNo" parameterType="int" resultType="com.javaex.vo.UserVo">
		<![CDATA[ 
			select 	no,
					id,
					name,
					password,
					gender
			from users
			where no = #{no}
		]]>
	</select>
	
	<!-- 회원정보수정 -->
	<update id="update" parameterType="com.javaex.vo.UserVo">
		<![CDATA[ 
			update users
			set name = #{name},
				password = #{password},
				gender = #{gender}
			where no = #{no}
		]]>
	</update>
	

</mapper>